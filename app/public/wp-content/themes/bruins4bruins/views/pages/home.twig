{% extends "base.twig" %}

{% block content %}

    {% include 'partials/hero.twig' with
        {
            title: post.get_field('hero_title'),
            text: post.get_field('hero_text'),
            btn_text: post.get_field('hero_button_text'),
            url: post.get_field('hero_button_url'),
            image: post.get_field('hero_image'),
        }
    %}

    <section>
        <div class="container w-full max-w-xl mx-auto pb-10 pt-20 md:pb-20 pl-5 pr-5">
            <p class="font-condensed font-bold text-4xl md:text-5xl text-center leading-tight" data-aos="fade-up" data-aos-duration="1000">Make your impact on current and future Bruins!</p>
        </div>
        <div class="container w-full max-w-xl mx-auto pb-10 md:pb-20 flex flex-col md:flex-row">
            <div class="flex-1 flex flex-col justify-center items-center border-none md:border-solid md:border-r border-gray-500 mb-5 md:mb-0" data-aos="fade-up" data-aos-duration="1000">
                <div class="font-condensed font-bold text-mega md:text-megax2 text-bublue leading-tight">$150,000</div>
                <span class="font-condensed font-bold text-3xl text-gray-500">Our Goal</span>
            </div>
            <div class="flex-1 flex flex-col justify-center items-center" data-aos="fade-up" data-aos-duration="1000">
                <div class="font-condensed font-bold text-mega md:text-megax2 text-bured-500 leading-tight">$<span class="counter" data-counter-time="2000" data-counter-delay="10">{{ post.meta('progress_amount') }}</span></div>
                <span class="font-condensed font-bold text-3xl text-gray-500">Our Progress</span>
            </div>
        </div>
        <div class="container w-full max-w-xl mx-auto pb-20 pl-5 pr-5 md:pl-0 md:pr-0">
            <p class="font-sans font-light text-2xl text-center" data-aos="fade-up" data-aos-duration="1000">Belmont provides an outstanding educational experience for students through the generosity of alumni, parents, faculty staff and friends who believe in the University and share their resources.</p>
            <p class="font-sans font-bold text-2xl text-center mt-10" data-aos="fade-up" data-aos-duration="1000">Your generosity supports:</p>
        </div>

        <div class="container w-full max-w-2xl mx-auto pb-20">
            <div class="flex flex-row flex-wrap justify-center md:justify-between items-center md:items-start pl-5 pr-5 md:pl-0 md:pr-0">
                <div class="w-1/2 md:w-1/6 flex flex-col mb-5" data-aos="fade-up" data-aos-duration="500">
                    <div class="px-12 md:px-10 mb-3">
                        <img src="{{ theme.link }}/assets/images/globe.png" alt="Life changing, sevice-centered missions" class="w-full h-auto" />
                    </div>

                    <p class="font-sans font-normal text-md text-center px-5 md:px-0">Life-changing, service-centered missions</p>
                </div>
                <div class="w-1/2 md:w-1/6 flex flex-col mb-5" data-aos="fade-up" data-aos-duration="750">
                    <div class="px-12 md:px-10 mb-3">
                        <img src="{{ theme.link }}/assets/images/sports.png" alt="Scholastic support for student-athletes" class="w-full h-auto"/>
                    </div>

                    <p class="font-sans font-normal text-md text-center px-5 md:px-0">Scholastic support for student-athletes</p>
                </div>
                <div class="w-1/2 md:w-1/6 flex flex-col mb-5" data-aos="fade-up" data-aos-duration="1000">
                    <div class="px-12 md:px-10 mb-3">
                        <img src="{{ theme.link }}/assets/images/scope.png" alt="Annual Fund—student research, competitions and conferences" class="w-full h-auto"/>
                    </div>

                    <p class="font-sans font-normal text-md text-center">Annual Fund—student research, competitions and conferences</p>
                </div>
                <div class="w-1/2 md:w-1/6 flex flex-col mb-5" data-aos="fade-up" data-aos-duration="1250">
                    <div class="px-12 md:px-10 mb-3">
                        <img src="{{ theme.link }}/assets/images/gift.png" alt="Scholarships for deserving students" class="w-full h-auto"/>
                    </div>

                    <p class="font-sans font-normal text-md text-center px-5 md:px-0">Scholarships for deserving students</p>
                </div>
                <div class="w-1/2 md:w-1/6 flex flex-col mb-5" data-aos="fade-up" data-aos-duration="1500">
                    <div class="px-12 md:px-10 mb-3">
                        <img src="{{ theme.link }}/assets/images/cap.png" alt="Endowed faculty support" class="w-full h-auto"/>
                    </div>

                    <p class="font-sans font-normal text-md text-center">Endowed faculty support</p>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-bublue" style="background: rgb(0,32,91);
background: radial-gradient(circle, rgba(0,32,91,1) 0%, rgba(11,20,57,1) 100%);">
        <div class="container w-full max-w-lg mx-auto pt-20 pb-20 pl-5 pr-5 md:pl-0 md:pr-0">
            <h2 class="font-condensed font-bold text-5xl text-center text-white leading-none mb-2" data-aos="fade-up" data-aos-duration="1000">About Bruins<span class="text-bured-500">4</span>Bruins</h2>
            <p class="font-sans font-light text-xl md:text-2xl text-center mb-8 text-white" data-aos="fade-up" data-aos-duration="1000">Bruins4Bruins is an annual spring fundraising initiative to raise $150,000. With your gift, you can become a part of a very important group of alumni, parents and friends who share their resources to ensure an outstanding educational experience for all Belmont students.</p>
            <style>.embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; } .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }</style><div class='embed-container' data-aos="fade-up" data-aos-duration="1000"><iframe src='https://www.youtube.com/embed/Tu2vvwPrjjA' frameborder='0' allowfullscreen></iframe></div>
        </div>
    </section>


    <section>
        <div class="container w-full max-w-2xl mx-auto pt-20 pb-20 pl-5 pr-5 md:pl-0 md:pr-0">
            <p class="font-condensed font-bold text-4xl md:text-5xl text-center leading-tight mb-10" data-aos="fade-up" data-aos-duration="1000">Here's what they are saying...</p>
            <div class="quotes">
                {% for item in post.meta('quotes') %}
                    <div class="quote relative px-8 py-8 rounded mb-10 md:mb-0" style="background: rgb(200,1,46);
background: radial-gradient(circle, rgba(200,1,46,1) 0%, rgba(107,18,30,1) 100%);" data-aos="fade-up" data-aos-duration="1000">
                        <img src="{{ item.quote_image }}" class="absolute bottom-0 right-0 h-56" />
                        <div class="quote-text relative">
                            <p class="font-sans font-normal italic text-md text-white">{{ item.quote_text }}</p>
                            <img src="{{ theme.link }}/assets/images/start-quote-black.png" class="absolute top-0 left-0" />
                            <img src="{{ theme.link }}/assets/images/end-quote-black.png" class="absolute right-0 bottom-0" />
                        </div>
                        <p class="font-condensed font-bold text-white text-xl mt-8 uppercase leading-tight">{{ item.quote_name }}</p>
                        <p class="font-condensed font-light text-white text-sm leading-tight uppercase">{{ item.quote_class }}</p>
                        <p class="font-serif italic font-normal text-white text-sm mb-32 leading-tight">{{ item.quote_school }}</p>

                    </div>
                {% endfor %}
            </div>
            <div class="flex flex-col justify-center items-center pt-10" data-aos="fade-up" data-aos-duration="1000">
                <p class="font-condensed font-bold text-4xl md:text-5xl text-center leading-tight mb-5">You can make a difference!</p>
                <a href="" class="btn" class="mt-8">Give Today</a>
            </div>

        </div>
    </section>

{% endblock %}


{% block javascripts %}

    {{ parent() }}

    <script src="http://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js"></script>

    <script>

        (function($) {
            $(window).on('scroll', function() {
                if ($(window).scrollTop() > 144) {
                    $('header').addClass('header--sticky');
                    $('header div img').attr('src', '{{ theme.link }}/assets/images/Bruins4BruinsBlue.png');
                } else {
                    $('header').removeClass('header--sticky');
                    $('header div img').attr('src', '{{ theme.link }}/assets/images/Bruins4BruinsWhite.png');
                }
            });
        })(jQuery);

        (function($){
            $('.counter').countUp();
        })(jQuery);



    </script>



{% endblock %}